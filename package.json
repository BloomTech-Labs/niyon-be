{
  "name": "niyon-be",
  "version": "1.0.0",
  "engine": {
    "node": "14.3.0"
  },
  "description": "Niyon Graphql Server",
  "main": "server.js",
  "scripts": {
    "server": "nodemon -r dotenv/config server.js",
    "start": "node server.js",
    "test": "heroku run knex migrate:rollback -a niyon-app -- --env=test && heroku run knex migrate:latest -a niyon-app -- --env=test && heroku run knex seed:run -a niyon-app -- --env=test && cross-env NODE_ENV=test jest --verbose  && coverage",
    "coverage": "heroku run knex migrate:rollback -a niyon-app -- --env=test && heroku run knex migrate:latest -a niyon-app -- --env=test && heroku run knex seed:run -a niyon-app -- --env=test && cross-env NODE_ENV=test jest --verbose  --coverage",
    "fake": "jest --coverage --detectOpenHandles --forceExit || true"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lambda-School-Labs/niyon-be.git"
  },
  "author": "Labs_pt_10",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Lambda-School-Labs/niyon-be/issues"
  },
  "homepage": "https://github.com/Lambda-School-Labs/niyon-be#readme",
  "devDependencies": {
    "dotenv": "^8.2.0",
    "jest": "^26.0.1",
    "nodemon": "^2.0.3",
    "sqlite": "^4.0.7",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "bcrypt": "^4.0.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "express": "^4.17.1",
    "helmet": "^3.22.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.21.1",
    "pg": "^8.0.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/__tests__/**",
      "!**/db/**",
      "!**/coverage/**",
      "!**/block/**"
    ]
  }
}
